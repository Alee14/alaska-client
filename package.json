{
  "name": "alaska-client",
  "description": "Flash client in Electron",
  "author": "Andrew Lee",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "electron-log": "^5.3.4",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "11.5.0",
    "electron-builder": "^26.0.12"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "me.alee14.alaska",
    "productName": "Alaska Client",
    "copyright": "Â© Copyright 2025, Andrew Lee",
    "linux": {
      "asarUnpack": [
        "plugin/**"
      ],
      "target": [
        "tar.gz",
        "appimage",
        "snap"
      ],
      "category": "Games",
      "publish": "github"
    },
    "win": {
      "asarUnpack": [
        "plugin/**"
      ],     
      "target": [
        "zip",
        "portable",
        "nsis"
      ],
      "publish": "github"
    },
    "mac": {
      "asarUnpack": [
        "plugin/**"
      ],
      "target": [
        "zip",
        "dmg"
      ],
      "category": "Games",
      "publish": "github"
    }
  }
}
